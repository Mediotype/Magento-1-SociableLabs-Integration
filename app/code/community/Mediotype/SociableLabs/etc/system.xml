<config>
    <tabs>
        <mediotype translate="label" module="mediotype_sociablelabs">
            <label>Mediotype</label>
            <sort_order>100</sort_order>
        </mediotype>
    </tabs>
    <sections>
        <sociablelabs_config translate="label" module="mediotype_sociablelabs">
            <label>Sociable Labs Integration</label>
            <tab>mediotype</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <!-- New groups go here -->
                <general translate="label" module="mediotype_sociablelabs">
                    <label>Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enable Module</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <token>
                            <label>Token</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Enter the unique identifier for your store provided by Sociable Labs]]></comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </token>
                    </fields>
                </general>
            </groups>
        </sociablelabs_config>
    </sections>
</config>
